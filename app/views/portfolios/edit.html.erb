<h1>Edit <%= @portfolio.title %></h1>

<%= form_with(model: @portfolio, local: true) do |form| %>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :main_img %>
    <%= form.text_area :main_img %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
